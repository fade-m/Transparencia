@model IEnumerable<Hckaton2018v2.estado>



<section class="wellcome_area clearfix" id="home">
    <div class="container h-100">
        <div class="row h-50 align-items-center">
            <div class="col-12 col-md">

                <div class="page-header text-center">
                    <h1 style="color:#f3f3ff">Estados</h1>
                </div>


                <br>
                <p>
                   <h2> @Html.ActionLink("Nuevo estado", "Create") </h2>
                </p>
                <br>
                <table class="table table-hover text-center h4">
                    <thead class="bg-light">
                        <tr>
                            <th >
                               Nombre
                            </th>
                            <th>
                             Población
                            </th>
                            <th></th>
                        </tr>

                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="text-light">
                                    @Html.DisplayFor(modelItem => item.nombre)
                                </td>
                                <td class="text-light">
                                    @Html.DisplayFor(modelItem => item.poblacion)
                                </td>
                                <td>
                                    @Html.ActionLink("Editar", "Edit", new { id = item.idEstado }) |
                                    @Html.ActionLink("Detalles", "Details", new { id = item.idEstado }) |
                                    @Html.ActionLink("Eliminar", "Delete", new { id = item.idEstado })
                                </td>
                            </tr>
                        }
                    </tbody>
            </table>
            </div>
            </div>
        </div>
</section>