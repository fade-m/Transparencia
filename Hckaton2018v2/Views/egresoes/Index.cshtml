@model IEnumerable<Hckaton2018v2.egreso>

<section class="wellcome_area clearfix" id="home">
    <div class="container h-100">
        <div class="row h-50 align-items-center">
            <div class="col-12 col-md">

                <div class="page-header text-center">
                    <h1 style="color:#f3f3ff">Egresos</h1>
                </div>


                <p>
                    <h2> @Html.ActionLink("Nuevo Egreso", "Create") </h2>
                </p>
                <table class="table table-hover text-center h4">
                    <thead class="bg-light">
                        <tr>
                            <th>
                               Cantidad
                            </th>
                            <th>
                               Descripción
                            </th>
                            <th>
                              Votos Positivos
                            </th>
                            <th>
                               Votos negativos
                            </th>
                            <th>
                               latitud
                            </th>
                            <th>
                              Longitud
                            </th>
                            <th>
                               Ruta archivo
                            </th>
                            <th>
                               Presupuesto
                            </th>
                            <th></th>
                        </tr>

                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="text-light">
                                    @Html.DisplayFor(modelItem => item.cantidad)
                                </td>
                                <td class="text-light">
                                    @Html.DisplayFor(modelItem => item.descripcion)
                                </td>
                                <td class="text-light">
                                    @Html.DisplayFor(modelItem => item.votosPositivos)
                                </td>
                                <td class="text-light">
                                    @Html.DisplayFor(modelItem => item.votosNegativos)
                                </td>
                                <td class="text-light">
                                    @Html.DisplayFor(modelItem => item.latitud)
                                </td>
                                <td class="text-light">
                                    @Html.DisplayFor(modelItem => item.longitud)
                                </td>
                                <td class="text-light">
                                    @Html.DisplayFor(modelItem => item.archivo.ruta)
                                </td>
                                <td class="text-light">
                                    @Html.DisplayFor(modelItem => item.presupuesto.idPresupuesto)
                                </td>
                                <td>
                                    @Html.ActionLink("Editar", "Edit", new { id = item.idEgreso }) |
                                    @Html.ActionLink("Detalles", "Details", new { id = item.idEgreso }) |
                                    @Html.ActionLink("Eliminar", "Delete", new { id = item.idEgreso })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>
